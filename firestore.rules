rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to get user's performerId
    function getUserPerformerId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.performerId;
    }

    // Searches collection
    match /searches/{searchId} {
      // Anyone can create a search (for public search page)
      allow create: if true;
      
      // Users can only read their own searches
      // Admins can read all searches
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.performerId == getUserPerformerId());
      
      // Only admins can delete searches
      allow delete: if isAdmin();
      
      // No updates allowed
      allow update: if false;
    }

    // Performers collection
    match /performers/{performerId} {
      // Only admins can create performers
      allow create: if isAdmin();
      
      // Authenticated users can read their own performer document
      // Admins can read all performers (including for getDocs queries)
      allow read: if isAuthenticated() && 
                     (isAdmin() || performerId == getUserPerformerId());
      
      // Performers can update only the isLocked field of their own performer document
      // Admins can update any field
      allow update: if isAuthenticated() && 
                      (isAdmin() || 
                       (performerId == getUserPerformerId() && 
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isLocked'])));
      
      // Only admins can delete
      allow delete: if isAdmin();
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      // Admins can read all
      allow read: if isAuthenticated() && 
                     (isAdmin() || userId == request.auth.uid);
      
      // Users can update their own document (for FCM token updates)
      // Admins can update any
      allow update: if isAuthenticated() && 
                       (isAdmin() || userId == request.auth.uid);
      
      // Only admins can create or delete user documents
      allow create, delete: if isAdmin();
    }
  }
}
